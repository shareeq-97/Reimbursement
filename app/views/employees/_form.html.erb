<%= form_with model: @employee do |form| %>
  <% if @employee.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">Errors</h4>
      <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <%= form.label :first_name, class: 'form-label' %>
        <%= form.text_field :first_name, class: 'form-control', required: true, maxlength: 50 %>
      </div>

      <div class="col-md-4 mb-3">
        <%= form.label :last_name, class: 'form-label' %>
        <%= form.text_field :last_name, class: 'form-control', required: true, maxlength: 50 %>
      </div>

      <div class="col-md-4 mb-3">
        <%= form.label :email, class: 'form-label' %>
        <%= form.email_field :email, class: "form-control", required: true, aria: { describedby: "emailHelp" }, placeholder: "Enter email" %>
      </div>
    </div>

    <div class="form-row">
      <div class="col-md-4 mb-3">
        <%= form.label :designation, class: 'form-label' %>
        <%= form.text_field :designation, class: 'form-control', required: true %>
      </div>

      <div class="col-md-4 mb-3">
        <%= form.label :department_id %>
        <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: 'Choose...' }, { class: 'form-control', required: true } %>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
